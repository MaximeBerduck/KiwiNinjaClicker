<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ItemShop">

    <TextView
        android:id="@+id/nomItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="nomItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoItem" />

    <TextView
        android:id="@+id/prixGain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="16dp"
        android:text="gainItem"
        app:layout_constraintStart_toEndOf="@+id/photoItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:minWidth="100px"
        android:minHeight="100px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />

    <TextView
        android:id="@+id/prixItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="34dp"
        android:text="prixItem"
        app:layout_constraintStart_toEndOf="@+id/nomItem"
        app:layout_constraintTop_toBottomOf="@+id/prixGain" />

    <Button
        android:id="@+id/buttonAcheter"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/prixGain"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>